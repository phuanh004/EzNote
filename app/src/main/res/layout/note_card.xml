<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/noteCardView"
    app:cardElevation="0dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="15dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal"
            android:layout_marginTop="5dp" />

        <TextView
            android:text="Note Header"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:id="@+id/noteHeaderTv"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/imageView3"
            android:layout_marginEnd="8dp" />

        <TextView
            android:text="time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noteTimeTv"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/noteHeaderTv"
            android:layout_marginStart="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="15sp" />

        <TextView
            android:text="Content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/noteContentTv"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/noteTimeTv"
            app:layout_constraintRight_toLeftOf="@+id/imageView3"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/noteHeaderTv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:maxLines="3"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>